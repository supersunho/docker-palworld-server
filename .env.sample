# Palworld Server Configuration
# Copy this file to .env and modify the values according to your needs

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Server basic settings
SERVER_NAME="My Palworld Server"
ADMIN_PASSWORD="your_admin_password_here"
SERVER_PASSWORD=""  # Leave empty for public server
MAX_PLAYERS=32
SERVER_PORT=8211
REST_API_PORT=8212

# =============================================================================
# FEATURE TOGGLES
# =============================================================================

# Enable/disable features
BACKUP_ENABLED=true
AUTO_UPDATE=true
REST_API_ENABLED=true
MONITORING_MODE=both  # Options: logs, prometheus, both
DISCORD_ENABLED=false

# =============================================================================
# DISCORD INTEGRATION
# =============================================================================

# Discord webhook configuration (optional)
# Get webhook URL from your Discord server settings
DISCORD_WEBHOOK_URL=""
DISCORD_MENTION_ROLE=""  # Role ID to mention in notifications

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================

# Backup settings
BACKUP_INTERVAL=3600  # Backup interval in seconds (3600 = 1 hour)
BACKUP_RETENTION_DAYS=7  # How many days to keep backups

# =============================================================================
# OPERATIONAL SETTINGS
# =============================================================================

# Logging and timezone
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR
TZ=UTC  # Timezone (e.g., America/New_York, Europe/London)

# User/Group IDs (for file permissions)
PUID=1000
PGID=1000

# =============================================================================
# DOCKER VOLUME PATHS
# =============================================================================

# Local directories for data persistence
DATA_DIR=./data          # Game save data directory
BACKUP_DIR=./backups     # Backup storage directory  
LOG_DIR=./logs           # Application logs directory

# =============================================================================
# ADVANCED SETTINGS (rarely need to change)
# =============================================================================

# Dashboard port (for monitoring)
DASHBOARD_PORT=8080

# Development settings
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1
