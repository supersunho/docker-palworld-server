{
    "dashboard": {
        "id": null,
        "title": "Palworld Server Dashboard",
        "tags": ["palworld", "server", "monitoring"],
        "timezone": "browser",
        "panels": [
            {
                "id": 1,
                "title": "Online Players",
                "type": "stat",
                "targets": [
                    {
                        "expr": "palworld_players_online_count",
                        "refId": "A"
                    }
                ],
                "fieldConfig": {
                    "defaults": {
                        "color": {
                            "mode": "thresholds"
                        },
                        "thresholds": {
                            "steps": [
                                { "color": "green", "value": null },
                                { "color": "red", "value": 80 }
                            ]
                        }
                    }
                },
                "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 }
            },
            {
                "id": 2,
                "title": "Server TPS",
                "type": "stat",
                "targets": [
                    {
                        "expr": "palworld_server_tps",
                        "refId": "A"
                    }
                ],
                "fieldConfig": {
                    "defaults": {
                        "color": { "mode": "thresholds" },
                        "thresholds": {
                            "steps": [
                                { "color": "red", "value": null },
                                { "color": "yellow", "value": 15 },
                                { "color": "green", "value": 18 }
                            ]
                        }
                    }
                },
                "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 }
            }
        ],
        "time": {
            "from": "now-1h",
            "to": "now"
        },
        "refresh": "30s"
    }
}
